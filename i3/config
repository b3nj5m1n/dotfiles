

# ------------------------------ Essential Setup ------------------------------  #

# Mod key set to alt
set $mod Mod1
# Super set to super
set $sup Mod4
# Set font
font pango:Ubuntu Nerd Font 10
# Start up some basic stuff
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
# Set keyboard layout
exec --no-startup-id setxkbmap de
# I have no idea what this does but it look important
set $refresh_i3status killall -SIGUSR1 i3status

exec bash eval $(/usr/bin/gnome-keyring-daemon --start --components=secrets)

# Set wallpaper
exec "~/wally.sh -r -t nature"
# Start picom
exec --no-startup-id picom
# Start dunst
exec --no-startup-id dunst
# Start polybar
exec ~/.config/polybar/polybar.sh


# ------------------------------ Essential Keybindings ------------------------------  #

# Mod + Return to open a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec alacritty
# Mod + Shift + q to close focused window
bindsym $mod+Shift+q kill
# Mod + d to open application launcher
bindsym $mod+d exec dmenu_run

# Session control
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# Lock i3
bindsym $mod+q exec ~/lock.sh


# ------------------------------ Tiling Keybindings ------------------------------  #

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal orientation
bindsym $mod+Ctrl+h split h
# split in vertical orientation
bindsym $mod+Ctrl+v split v


# ------------------------------ Workspace Keybindings ------------------------------  #

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
# Cycle workspaces
bindsym $mod+Tab workspace next
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


# ------------------------------ Audio/Brightness Control etc. ------------------------------  #

# Volume Control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 3%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 3%- #decrease sound volume
bindsym $mod+Shift+plus exec --no-startup-id amixer sset 'Master' 1%+ #increase sound volume
bindsym $mod+Shift+minus exec --no-startup-id amixer sset 'Master' 1%- #increase sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set 'Master' toggle # mute sound
# Player Control
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# Brightness Control
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Cmus controls
# Toggle Play/Pause
bindsym $mod+p exec cmus-remote -u
# Next Song
bindsym $mod+n exec cmus-remote -n
# Previous Song
bindsym $mod+m exec cmus-remote -r

# ------------------------------ Resizing Keybindings ------------------------------  #

# Move fingers up one row from vim keybindings to resize windows
bindsym $mod+Shift+o resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+u resize grow height 10 px or 10 ppt
bindsym $mod+Shift+i resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+z resize grow width 10 px or 10 ppt
# Resize gaps on the fly
# Resize outer gaps
bindsym $mod+Ctrl+o gaps outer current plus 5
bindsym $mod+Ctrl+Shift+o gaps outer current minus 5
# Resize inner gaps
bindsym $mod+Ctrl+u gaps inner current plus 5
bindsym $mod+Ctrl+Shift+u gaps inner current minus 5
# Get rid of all gaps
bindsym $mod+Ctrl+r gaps outer all set 0; gaps inner all set 0
# Reset gaps to default
bindsym $mod+Ctrl+d gaps outer all set 15; gaps inner all set 5


# ------------------------------ Other Keybindings ------------------------------  #

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
# Get rid of borders
bindsym $mod+Shift+b border pixel 0
# Get borders back
bindsym $mod+Shift+Ctrl+b border pixel 2
# Vim arrow keys everywhere
# Left
bindsym --release $sup+h exec --no-startup-id xdotool key --clearmodifiers 0xff51
# Down
bindsym --release $sup+j exec --no-startup-id xdotool key --clearmodifiers 0xff54
# Up
bindsym --release $sup+k exec --no-startup-id xdotool key --clearmodifiers 0xff52
# Right
bindsym --release $sup+l exec --no-startup-id xdotool key --clearmodifiers 0xff53
# Change wallpaper
bindsym $sup+w exec "~/wally.sh -r -t all"

# ------------------------------ Workspaces ------------------------------  #

# Labeling workspaces (Number before the icon to ensure proper sorting, wont's show up in bar)
# Workspace 1 is reserved for terminals
set $ws1 "1"
# Workspace 2 is reserved for webbrowser/vlc
set $ws2 "2"
# Workspace 1 is reserved for vim
set $ws3 "3"
# Workspace 4 is reserved for terminals
set $ws4 "4"
# Workspace 5 is reserved for thunderbird
set $ws5 "5 - "
# Workspace 6 is reserved for anki
set $ws6 "6 - "
# Workspace 7 is reserved for text editors (Mainly VS code or Libre Office Writer)
set $ws7 "7 - "
# Workspace 8 is reserved for chatting (Mainly Discord)
set $ws8 "8 - ﭮ"
# Workspace 9 is reserved for music (Mainly Clementine)
set $ws9 "9 - "
# Workspace 10 is reserved for crap (Like music visualizer or something like that)
set $ws10 "10"

# Default workspace for certain programs
# for_window [instance="firefox"] move to workspace $ws2
for_window [instance="vlc"] move to workspace $ws2
# for_window [instance="Mail"] move to workspace $ws5
for_window [instance="anki"] move to workspace $ws6
for_window [instance="code"] move to workspace $ws7
for_window [instance="libreoffice-writer"] move to workspace $ws7
for_window [instance="libreoffice-calc"] move to workspace $ws7
for_window [instance="discord"] move to workspace $ws8
for_window [instance="clementine"] move to workspace $ws9

