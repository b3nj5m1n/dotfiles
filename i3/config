

# ------------------------------ Essential Setup ------------------------------  #

# Mod key set to alt
set $mod Mod1
# Super set to super
set $sup Mod4
# Set font
font pango:Ubuntu Nerd Font 10
# Start up some basic stuff
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
# Set keyboard layout
exec --no-startup-id setxkbmap de
# I have no idea what this does but it look important
set $refresh_i3status killall -SIGUSR1 i3status
# Start keyring
exec bash eval $(/usr/bin/gnome-keyring-daemon --start --components=secrets)

# Set wallpaper
exec "~/wally.sh -r -t nature"
# Start picom
exec --no-startup-id picom
# Start dunst
exec --no-startup-id dunst
# Start polybar
exec ~/.config/polybar/polybar.sh


# ------------------------------ Essential Keybindings ------------------------------  #

# Mod + Return to open a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec alacritty
# Mod + Shift + q to close focused window
bindcode $mod+Shift+24 kill
# Mod + d to open application launcher
bindcode $mod+40 exec dmenu_run

# Session control
# Mod + Shift + c reload the configuration file
bindcode $mod+Shift+54 reload
# Mod + Shift + r restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindcode $mod+Shift+27 restart
# Mod + Shift + e exit i3 (logs you out of your X session)
bindcode $mod+Shift+26 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# Mod + q Lock i3
bindcode $mod+24 exec ~/lock.sh


# ------------------------------ Tiling Keybindings ------------------------------  #

# hjkl change focus
bindcode $mod+43 focus left
bindcode $mod+44 focus down
bindcode $mod+45 focus up
bindcode $mod+46 focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# hjkl move focused window
bindcode $mod+Shift+43 move left
bindcode $mod+Shift+44 move down
bindcode $mod+Shift+45 move up
bindcode $mod+Shift+46 move right
# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Mod + Ctrl + h split in horizontal orientation
bindcode $mod+Ctrl+43 split h
# Mod + Ctrl + v split in vertical orientation
bindcode $mod+Ctrl+55 split v


# ------------------------------ Workspace Keybindings ------------------------------  #

# 1-0 switch to workspace
bindcode $mod+10 workspace $ws1
bindcode $mod+11 workspace $ws2
bindcode $mod+12 workspace $ws3
bindcode $mod+13 workspace $ws4
bindcode $mod+14 workspace $ws5
bindcode $mod+15 workspace $ws6
bindcode $mod+16 workspace $ws7
bindcode $mod+17 workspace $ws8
bindcode $mod+18 workspace $ws9
bindcode $mod+19 workspace $ws10
# Cycle workspaces
bindsym $mod+Tab workspace next
# 1-0 move focused container to workspace
bindcode $mod+Shift+10 move container to workspace $ws1
bindcode $mod+Shift+11 move container to workspace $ws2
bindcode $mod+Shift+12 move container to workspace $ws3
bindcode $mod+Shift+13 move container to workspace $ws4
bindcode $mod+Shift+14 move container to workspace $ws5
bindcode $mod+Shift+15 move container to workspace $ws6
bindcode $mod+Shift+16 move container to workspace $ws7
bindcode $mod+Shift+17 move container to workspace $ws8
bindcode $mod+Shift+18 move container to workspace $ws9
bindcode $mod+Shift+19 move container to workspace $ws10


# ------------------------------ Audio/Brightness Control etc. ------------------------------  #

# Volume Control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 3%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 3%- #decrease sound volume
bindsym $mod+Shift+plus exec --no-startup-id amixer sset 'Master' 1%+ #increase sound volume
bindsym $mod+Shift+minus exec --no-startup-id amixer sset 'Master' 1%- #increase sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set 'Master' toggle # mute sound
# Player Control
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# Brightness Control
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Cmus controls
# Mod + p Toggle Play/Pause
bindcode $mod+33 exec cmus-remote -u
# Mod + n Next Song
bindcode $mod+57 exec cmus-remote -n
# Mod + m Previous Song
bindcode $mod+58 exec cmus-remote -r

# ------------------------------ Resizing Keybindings ------------------------------  #

# zuio Move fingers up one row from vim keybindings to resize windows
bindcode $mod+Shift+32 resize shrink width 10 px or 10 ppt
bindcode $mod+Shift+30 resize grow height 10 px or 10 ppt
bindcode $mod+Shift+31 resize shrink height 10 px or 10 ppt
bindcode $mod+Shift+29 resize grow width 10 px or 10 ppt
# Resize gaps on the fly
# Resize outer gaps
# bindsym $mod+Ctrl+o gaps outer current plus 5
# bindsym $mod+Ctrl+Shift+o gaps outer current minus 5
# Resize inner gaps
# bindsym $mod+Ctrl+u gaps inner current plus 5
# bindsym $mod+Ctrl+Shift+u gaps inner current minus 5
# Mod + Ctrl + r Get rid of all gaps
bindcode $mod+Ctrl+27 gaps outer all set 0; gaps inner all set 0
# Mod + Ctrl + d Reset gaps to default
bindcode $mod+Ctrl+40 gaps outer all set 15; gaps inner all set 5


# ------------------------------ Other Keybindings ------------------------------  #

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# Mod + f enter fullscreen mode for the focused container
bindcode $mod+41 fullscreen toggle
# Mod + s/w/e change container layout (stacked, tabbed, toggle split)
bindcode $mod+39 layout stacking
bindcode $mod+25 layout tabbed
bindcode $mod+26 layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# Mod + a focus the parent container
bindcode $mod+38 focus parent
# Mod + b Get rid of borders
# bindsym $mod+Shift+56 border pixel 0
# Mod + Shift + Ctrl + b Get borders back
# bindsym $mod+Shift+Ctrl+56 border pixel 2
# hjkl Vim arrow keys everywhere
# Left
bindcode --release $sup+43 exec --no-startup-id xdotool key --clearmodifiers 0xff51
# Down
bindcode --release $sup+44 exec --no-startup-id xdotool key --clearmodifiers 0xff54
# Up
bindcode --release $sup+45 exec --no-startup-id xdotool key --clearmodifiers 0xff52
# Right
bindcode --release $sup+46 exec --no-startup-id xdotool key --clearmodifiers 0xff53
# Sup + w Change wallpaper
bindcode $sup+25 exec "~/wally.sh -r -t all"

# ------------------------------ Workspaces ------------------------------  #

# Labeling workspaces (Number before the icon to ensure proper sorting, wont's show up in bar)
# Workspace 1 is reserved for terminals
set $ws1 "1"
# Workspace 2 is reserved for webbrowser/vlc
set $ws2 "2"
# Workspace 1 is reserved for vim
set $ws3 "3"
# Workspace 4 is reserved for terminals
set $ws4 "4"
# Workspace 5 is reserved for thunderbird
set $ws5 "5 - "
# Workspace 6 is reserved for anki
set $ws6 "6 - "
# Workspace 7 is reserved for text editors (Mainly VS code or Libre Office Writer)
set $ws7 "7 - "
# Workspace 8 is reserved for chatting (Mainly Discord)
set $ws8 "8 - ﭮ"
# Workspace 9 is reserved for music (Mainly Clementine)
set $ws9 "9 - "
# Workspace 10 is reserved for crap (Like music visualizer or something like that)
set $ws10 "10"

# Default workspace for certain programs
# for_window [instance="firefox"] move to workspace $ws2
for_window [instance="vlc"] move to workspace $ws2
# for_window [instance="Mail"] move to workspace $ws5
for_window [instance="anki"] move to workspace $ws6
for_window [instance="code"] move to workspace $ws7
for_window [instance="libreoffice-writer"] move to workspace $ws7
for_window [instance="libreoffice-calc"] move to workspace $ws7
for_window [instance="discord"] move to workspace $ws8
for_window [instance="clementine"] move to workspace $ws9

